<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<!-- 
	1. 레이아웃을 구성할 파일 지정(디자인 파일 지정)
	2. 1번에서 사용할 조각 페이지 파일을 지정
 -->

<tiles-definitions>

	<definition name="*" template="/WEB-INF/views/layouts/test.jsp">
		<put-attribute name="main" value="/WEB-INF/views/hello.jsp" />
	</definition>
	
	
	 <definition name="member.*" template="/WEB-INF/views/layouts/admin.jsp" >
		<!--  return "data";return "member";
		방금 선언한 레이아웃 페이지에서 사용할 모듈을 정의(조각 페이지) -->
		<put-attribute name="asset" value="/WEB-INF/views/inc/asset.jsp"></put-attribute>	
		<put-attribute name="mainmenu" value="/WEB-INF/views/inc/mainmenu.jsp"></put-attribute>
		<put-attribute name="adminsubmenu" value="/WEB-INF/views/inc/adminsubmenu.jsp"></put-attribute>		
		<put-attribute name="core" value="/WEB-INF/views/admin/{1}.jsp"></put-attribute>
				
	</definition>
	
</tiles-definitions>